<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--tree view-->
    <!--decoration-danger take color red-->
    <!--decoration-warning take color yellow-->
    <record id="tree_view_cobranzas" model="ir.ui.view">
            <field name="name">cobranza.view.tree</field>
            <field name="model">cobranza.inducom</field>
            <field name="arch" type="xml">
                <tree >
                    <field name="cliente" string="Cliente"/>
                    <field name="fecha_facturacion" string="Fecha de Facturacion"/>
                    <field name="plazo" string="Plazo"/>
                    <field name="fecha_vencimiento" string="Fecha de Vencimiento"/>
                    <field name="mora" string="Mora"/>
                    <field name="num_fact" string="Numero de Factura"/>
                    <field name="saldo" string="Saldo"/>
                    <field name="situacion" string="Situacion"/>
                    <field name="estado" string="Estado"/>
                    <field name="pendiente" string="Pendiente"/>
                    <field name="email" string="Email"/>
                </tree>
            </field>
    </record>

<!--form view-->
    <record id="view_cobros_new" model="ir.ui.view">
            <field name="name">cobros.from.view</field>
            <field name="model">cobranza.inducom</field>
            <field name="arch" type="xml">
                    <form string="orden">

                        <header>
                             <button name="action_send_cobro" type="object" string="notificar" data-hotkey="s" class="oe_highlight"/>
                        </header>

                        <sheet>
                            <group>
                                <field name="cliente"/>
                                <field name="fecha_facturacion"/>
                                <field name="plazo"/>
                                <field name="fecha_vencimiento"/>
                                <field name="mora"/>
                                <field name="num_fact"/>
                                <field name="saldo"/>
                                <field name="situacion"/>
                                <field name="estado"/>
                                <field name="pendiente"/>
                                <field name="email"/>
                            </group>
                        </sheet>
                </form>
            </field>
    </record>



    <record id="action_new_cobros" model="ir.actions.act_window">
            <field name="name">Cobranzas</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cobranza.inducom</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    agregue facturas para cobrar
                </p>
            </field>
    </record>

    <menuitem id="cobranzas_menu"
                      name="Cobranzas"
                      action="action_new_cobros"
                      parent="cobros_root"
                      sequence="0"
    />



</odoo>
