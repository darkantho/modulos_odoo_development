<?xml version="1.0" encoding="utf-8" ?>
<odoo>


    <data noupdate="1">

        <record id="ric_mail_template" model="mail.template">
            <field name="name">RIC notification Template </field>
            <field name="model_id" ref="modulo_rics.model_rics_inducom"/>
            <field name="email_from">botinducom@gmail.com</field>
            <field name="email_to">acompras@inducom-ec.com</field>
            <field name="subject">Nueva Ric de trabajo No {{object.ric_number}}</field>
            <field name="body_html" type="html">
                    <div style="margin: 0px; padding: 0px;">
                        <p style="margin: 0px; padding: 0px; font-size: 13px;">
                            Nueva RIC de trabajo Generado
                            <br /><br />
                            la fecha de entrega del RIC es para la fecha  <t t-out="object.date_ric_end"></t>
                            <br /><br />
                        </p>
                    </div>
            </field>
        </record>

    </data>
</odoo>