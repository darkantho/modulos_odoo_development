<?xml version="1.0" encoding="utf-8"?>
<odoo>

        
        <record id="product_tree_view" model="ir.ui.view">
            <field name="name">product.view.tree</field>
            <field name="model">productos.inducom</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="product_id" string="codigo"  />
                    <field name="product_name" string="nombre" />
                </tree>
            </field>
        </record>

        <record id="product_form_view" model="ir.ui.view">
            <field name="name">product.form.view</field>
            <field name="model">productos.inducom</field>
            <field name="arch" type="xml">
                
                <form string="producto">
                    <sheet>
                        <group  string="datos del producto">
                                <field name="product_id" />
                                <field name="product_name"/>
                                <field name="qty"/>
                        </group>
                    </sheet>
                
                </form>
            </field>
        </record>

       
        
        <record id="product_action" model="ir.actions.act_window">
            <field name="name">productos</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">productos.inducom</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    agregar productos porfavor
                </p>
            </field>
        </record>

         <menuitem id="product_menu"
            name="Nuevo producto"
            action="product_action"
            parent="product_menu_root"
            sequence="1"/>

</odoo>
